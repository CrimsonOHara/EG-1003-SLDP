WindowManager:
    RedGridLayoutCombos:
    RedFashionCombinations:

#: import utils kivy.utils

#LayoutForCombos

<RedGridLayoutCombos>:
    name: "first"

    GridLayout:
        cols:1
        size: root.width, root.height

        GridLayout:
            cols:2

            Label:
                text: "Complementary Color"
                font_size: 20

            TextInput:
                text: "Green"

            Label:
                text: "Triadactic Colors"
                font_size: 20

            TextInput:
                text: "Blue and Yellow"

            Label:
                text: "Tetradic Colors"
                font_size: 20

            TextInput:
                text: "Blue, Red, and Orange"

        Button:
            text: "Would you like to see possible fashion combinations with complementary colors?"
            font_size: 20
            on_release:
                app.root.current = "second"
                root.manager.transition.direction = "left"

<RedFashionCombinations>:
    name: "second"
    orientation: 'horizontal'


    BoxLayout:
        padding: 5

        AsyncImage:
            source: 'https://i.pinimg.com/564x/8e/aa/ca/8eaacab2747a85af7ad26a33c69c9e0e.jpg'
            width: 100
            allow_stretch: True

        Label:
            text: "Red Leather Jackets"

            font_size: 11

            bold:True

        Label:
            text: "Thrift Stores"
            font_size: 15

##############################################

    Label:
        canvas.before:
            Color:
                rgba: (1, 1 ,1 ,1)
            Rectangle:
                size: self.size
                pos: self.pos
        size_hint_y: None
        height: 1

################################################

    BoxLayout:
        padding:5

        AsyncImage:
            source: 'https://i.pinimg.com/564x/3f/2b/fb/3f2bfb537f68ba16d3c1d053d646d16b.jpg'
            width: 100
            allow_stretch: True

        Label:
            text: "Test"
            font_size:11
            bold:True

        Label:
            text: "Test"
            font_size:10

##########################





