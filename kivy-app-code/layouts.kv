#: import utils kivy.utils

#LayoutForCombos

<StartingScreen>:
    name:"first"

    canvas:
        Color:
            rgb: (0.93, 0.93, 0.93)
        Rectangle:
            pos: self.pos
            size: self.size

    GridLayout:
        cols: 4
        rows: 2

        Button:
            text:'Red'
            background_color:
            on_release:
                app.root.current = "firstred"
                root.manager.transition.direction = "left"

        Button:
            text: 'Green'
            on_release:
                app.root.current = "firstgreen"
                root.manager.transition.direction = "left"

        Button:
            text: 'Blue'
            on_release:
                app.root.current = "firstblue"
                root.manager.transition.direction = "left"

        Button:
            text: 'Yellow'
            on_release:
                app.root.current = "firstyellow"
                root.manager.transition.direction = "left"

        Button:
            text: 'Violet'
            on_release:
                app.root.current = "firstviolet"
                root.manager.transition.direction = "left"

        Button:
            text: 'Black'
            on_release:
                app.root.current = "firstblack"
                root.manager.transition.direction = "left"

        Button:
            text: 'White'
            on_release:
                app.root.current = "firstwhite"
                root.manager.transition.direction = "left"

        Button:
            text: 'Orange'
            on_release:
                app.root.current = "firstorange"
                root.manager.transition.direction = "left"

<RedGridLayoutCombos>:
    name: "firstred"

    GridLayout:
        cols:1
        size: root.width, root.height

        GridLayout:
            cols:2

            Label:
                text: "Complementary Color"
                font_size: 20

            TextInput:
                text: "Green"

            Label:
                text: "Triadactic Colors"
                font_size: 20

            TextInput:
                text: "Blue and Yellow"

            Label:
                text: "Tetradic Colors"
                font_size: 20

            TextInput:
                text: "Blue, Red, and Orange"

        Button:
            text: "Would you like to see possible fashion combinations with the color?"
            font_size: 20
            on_release:
                app.root.current = "secondred"
                root.manager.transition.direction = "left"

